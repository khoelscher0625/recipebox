<div class="booyah-box col-10 offset-1">
  <h1> Enter your recipe details here </h1>
  <%= simple_form_for @recipe do |f| %>
    <%= f.input :name %>
    <%= f.input :course %>
    <%= f.input :servings %>
    <%= f.input :memory %>
    <br />
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>